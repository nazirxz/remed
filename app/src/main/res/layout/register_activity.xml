<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/centralLogo"
                android:layout_width="303dp"
                android:layout_height="145dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_background"
                android:hint="Nama" />

            <EditText
                android:id="@+id/inputGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Kelamin"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usia"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputMedicalHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Riwayat Penyakit"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputEmailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email/No Hp"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kata Sandi"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputControlSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jadwal Kontrol"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/bluelight" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
